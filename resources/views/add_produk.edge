<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Add New Product</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside class="w-64 bg-white border-r shadow-sm flex flex-col">
      <div class="p-6 border-b">
        <h1 class="text-lg font-bold text-gray-900">GudangIn</h1>
      </div>
      <nav class="flex-1 p-4 space-y-6">
        <div>
          <h2 class="text-xs font-semibold text-gray-500 uppercase mb-2">Platform</h2>
          <a href="/dashboard"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md">
            Dashboard
          </a>
        </div>
        <div>
          <h2 class="text-xs font-semibold text-gray-500 uppercase mb-2">Penjualan</h2>
          <a href="/salesinventory"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md">
            Sales & Inventory Dashboard
          </a>
        </div>
        <div>
          <h2 class="text-xs font-semibold text-gray-500 uppercase mb-2">Management</h2>
          <a href="/produk"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-indigo-700 bg-indigo-50 rounded-md">
            Manage Products
          </a>
          <a href="/kategori"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md">
            Manage Product Categories
          </a>
          <a href="/supplier"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md">
            Manage Suppliers
          </a>
        </div>
      </nav>
      <div class="border-t p-4 flex items-center justify-between">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center text-sm font-bold">
            RD
          </div>
          <span class="text-sm font-medium text-gray-700">Raia Digna Amanda</span>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6">
      <div class="max-w-3xl mx-auto bg-white shadow rounded-lg p-6">
        <h1 class="text-2xl font-bold mb-4 text-gray-800">Add New Product</h1>
        <form action="/produk" method="POST" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Product ID</label>
            <input type="text" name="id" class="w-full border border-gray-300 rounded-md px-3 py-2" required />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Product Name</label>
            <input type="text" name="nama_produk" class="w-full border border-gray-300 rounded-md px-3 py-2" required />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Price</label>
            <input type="number" step="0.01" name="harga" class="w-full border border-gray-300 rounded-md px-3 py-2" required />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Stock</label>
            <input type="number" name="stok" class="w-full border border-gray-300 rounded-md px-3 py-2" required />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Category</label>
            <select name="kategori_id" class="w-full border border-gray-300 rounded-md px-3 py-2" required>
              <option value="">-- Select Category --</option>
              @each(category in kategoriList)
                <option value="{{ category.id }}">{{ category.nama_kategori }}</option>
              @endeach
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Supplier</label>
            <select name="supplier_id" class="w-full border border-gray-300 rounded-md px-3 py-2" required>
              <option value="">-- Select Supplier --</option>
              @each(supplier in supplierList)
                <option value="{{ supplier.id }}">{{ supplier.nama_supplier }}</option>
              @endeach
            </select>
          </div>
          <div class="flex justify-end gap-3 pt-4">
            <a href="/produk" class="px-4 py-2 text-sm rounded-md border border-gray-300 text-gray-700 hover:bg-gray-100">Cancel</a>
            <button type="submit" class="px-4 py-2 text-sm rounded-md bg-indigo-600 text-white hover:bg-indigo-700">Save Product</button>
          </div>
        </form>
      </div>
    </main>
  </div>
</body>
</html>
