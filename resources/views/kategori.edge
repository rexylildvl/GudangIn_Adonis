<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Manage Product Categories</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans">
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside class="w-64 bg-white border-r shadow-sm flex flex-col">
      <div class="p-6 border-b">
        <h1 class="text-lg font-bold text-gray-900">GudangIn</h1>
      </div>
      <nav class="flex-1 p-4 space-y-6">
        <div>
          <h2 class="text-xs font-semibold text-gray-500 uppercase mb-2">Platform</h2>
          <a href="/dashboard"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md">
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-4 0h4" />
            </svg>
            Dashboard
          </a>
        </div>
        <div>
          <h2 class="text-xs font-semibold text-gray-500 uppercase mb-2">Penjualan</h2>
          <a href="/salesinventory"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md">
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M3 3v18h18V3H3zm6 14H7v-4h2v4zm4 0h-2v-8h2v8zm4 0h-2v-6h2v6z" />
            </svg>
            Sales & Inventory Dashboard
          </a>
        </div>
        <div>
          <h2 class="text-xs font-semibold text-gray-500 uppercase mb-2">Management</h2>
          <a href="/produk"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md">
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M20 13V7a2 2 0 00-2-2h-5.5a1.5 1.5 0 00-3 0H6a2 2 0 00-2 2v6m16 0v6a2 2 0 01-2 2H6a2 2 0 01-2-2v-6m16 0H4" />
            </svg>
            Manage Products
          </a>
          <a href="/kategori"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-indigo-700 bg-indigo-50 rounded-md">
            <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 6h16M4 10h16M4 14h16M4 18h16" />
            </svg>
            Manage Product Categories
          </a>
          <a href="/supplier"
            class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-md">
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M8 7V3m8 4V3m-9 9h10M5 21h14a2 2 0 002-2v-5H3v5a2 2 0 002 2z" />
            </svg>
            Manage Suppliers
          </a>
        </div>
      </nav>
      <div class="border-t p-4 flex items-center justify-between">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center text-sm font-bold">
            RD
          </div>
          <span class="text-sm font-medium text-gray-700">Raia Digna Amanda</span>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 p-6">
      <div class="max-w-5xl mx-auto bg-white shadow rounded-lg p-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h1 class="text-2xl font-bold text-gray-800">Categories</h1>
            <p class="text-gray-600">Manage your product categories</p>
          </div>
          <a href="/kategori/create"
            class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded text-sm font-medium">+ Add
            New Category</a>
        </div>

        <div class="overflow-x-auto">
          <table class="min-w-full text-sm text-left text-gray-700">
            <thead class="bg-gray-100 text-xs uppercase text-gray-600">
              <tr>
                <th class="px-4 py-3">No</th>
                <th class="px-4 py-3">Category ID</th>
                <th class="px-4 py-3">Category Name</th>
                <th class="px-4 py-3">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              @if(kategori.length > 0)
                @each((kategori, index) in kategori)
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3">{{ index + 1 }}</td>
                    <td class="px-4 py-3">
                      <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded text-xs">{{ kategori.id }}</span>
                    </td>
                    <td class="px-4 py-3">{{ kategori.namaKategori }}</td>
                    <td class="px-4 py-3 flex space-x-2">
                      <a href="/kategori/{{ kategori.id }}/edit"
                        class="bg-blue-100 text-blue-700 px-3 py-1 rounded text-xs hover:bg-blue-200">Edit</a>
                      <form method="POST" action="/kategori/{{ kategori.id }}" onsubmit="return confirm('Hapus kategori ini?')">
                        <input type="hidden" name="_method" value="DELETE" />
                        <button type="submit"
                          class="bg-red-100 text-red-700 px-3 py-1 rounded text-xs hover:bg-red-200">Delete</button>
                      </form>
                    </td>
                  </tr>
                @endeach
              @else
                <tr>
                  <td colspan="4" class="text-center px-4 py-6 text-gray-500">
                    Belum ada data kategori.
                  </td>
                </tr>
              @endif
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>
</body>

</html>
